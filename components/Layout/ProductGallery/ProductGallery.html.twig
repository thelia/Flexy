{% set images = resources('/api/front/product_images', {'product.id':productId}) %}
{% if images %}
	{% set imgId = images|last.id  %}
{% endif %}
<div class="ProductGallery">
	<ul class="ProductGallery-list">
		{% for image in images %}
			<li class="ProductGallery-item cursor-pointer{% if loop.index== 1 %} is-active{% endif %}">
				<img class="ProductGallery-thumbnail" data-image-id="{{ image.id }}" src="{{ "/legacy-image-library/product_image_"~image.id~"/full/%5E*!92,92/0/default.webp"}}" loading="lazy"/>
			</li>
		{% endfor %}
	</ul>
	<div class="ProductGallery-main">
		<section id="ProductGallery" class="splide" aria-label="{{"Product's visuals"|trans}}">
			<div class="splide__track">
				<ul class="splide__list">
					{% for image in images %}
						<li class="splide__slide">
							<img src="{{ image.id ? "/legacy-image-library/product_image_"~image.id~"/full/%5E*!594,594/0/default.webp" : "@assets/images/placeholder2.webp"}}" class="w-full" loading="lazy"/>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="splide__arrows">
				<button class="splide__arrow splide__arrow--prev">
					{{ ux_icon('arrow-left') }}
				</button>
				<button class="splide__arrow splide__arrow--next">
					{{ ux_icon('arrow-right') }}
				</button>
			</div>
		</section>
	</div>
</div>
