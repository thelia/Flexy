{% set title = title|default('') %}
{% set hours = hours|default([]) %} {# hours: [{ day: 'lundi', hours: '14h - 19h' }, ...] #}
{% set address = address|default({
  title: "",
  name: "",
  address1: "",
  zipCode: '',
  city: ''
}) %}

<div class='MobileDrawer' id='PickupPointDrawer'>
  <div class='MobileDrawer-header'>
    <button class='MobileDrawer-close' type='button' data-drawer-close>{{ ux_icon("close") }}</button>
  </div>
  <div>
    <div class='PickupPointDrawer-title'>{{ title }}</div>
    <div class='PickupPointDrawer-address'>
          <div>{{ address.address1 }},</div>
          {% if address.address2 %}<div>{{ address.address2 }},</div>{% endif %}
          <div>{{ address.zipCode }} {{ address.city }}</div>
        </div>
  </div>
  <div class='PickupPoint-hoursListing'>
    <table>
      {% for hour in hours %}
        <tr>
          <td>{{ hour.day }}</td>
          <td>{{ hour.hours }}</td>
        </tr>
      {% endfor %}
    </table>
  </div>
  <div class='mt-4'>
    {% include '@components/Molecules/Button/Button.html.twig' with
      {classes:'Button--large', variant:'primary', text:'Choose this relay point'|trans, fill:true} %}
  </div>
</div>
