{% extends 'base.html.twig' %}

{% block title %}{{ 'Login' | trans }}{% endblock %}

{% block body %}
	<div class="max-w-[400px] px-[25px] pt-[30px] pb-[54px] lg:px-0 lg:pt-[50px] lg:pb-[120px] mx-auto">
		<form>
			<h2 class="mb-4 h2">{{ 'Log in' | trans }}</h2>

			<div class="flex flex-col gap-6 mb-3">
				{% include "@components/Molecules/Fields/FieldInput/FieldInput.html.twig" with {
          label: 'Email' | trans,
          name: 'email',
          type: 'email',
          placeholder: 'Your email' | trans,
          required: true,
        } %}

				{% include "@components/Molecules/Fields/FieldInput/FieldInput.html.twig" with {
          label: 'Password' | trans,
          name: 'password',
          type: 'password',
          placeholder: 'Your password' | trans,
          required: true,
        } %}
			</div>

			<div class="flex flex-col gap-[30px]">
				{% include "@components/Molecules/Link/Link.html.twig" with {
          customText: 'Forgot password?' | trans,
          href: '#'
        } %}

				{% include "@components/Molecules/Button/Button.html.twig" with { text: 'Log in' | trans, classes: "w-max" } %}
			</div>

			<hr class="my-[40px]"/>

			<h4 class="mb-4 h4">{{ 'Donâ€™t have an account yet?' | trans }}</h4>

			{% include "@components/Molecules/Button/Button.html.twig" with { text: "Sign up" | trans, variant: "secondary" } %}
		</form>
	</div>
{% endblock %}
